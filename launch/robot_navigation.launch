<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find assessmentmobilerobots_2022)/map/map_2_good/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  
  <node pkg="tf" type="static_transform_publisher" name="base_link_broadcaster" args="0 0 0.05 0 0 0 odom base_link 50" />
  <remap to="odom" from="/base_truth_odom" />
  
  
  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find amcl)/examples/amcl_diff.launch"/>  

  <!-- move_base -->
  <include file="$(find assessmentmobilerobots_2022)/launch/move_base.launch"/>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find assessmentmobilerobots_2022)/parameters/navigation.rviz"/>
  </group>
</launch>
