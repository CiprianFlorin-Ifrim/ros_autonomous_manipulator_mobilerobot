<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- spawn robot and load controllers -->
  <include file="$(find assessmentmobilerobots_2022)/launch/robot_controllers_spawner.launch"/> 
  
  <!-- load the gazebo world - enable/disable the GUI -->  
  <arg name="gui" default="false"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find assessmentmobilerobots_2022)/worlds/assessment.world"/>
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

</launch>
