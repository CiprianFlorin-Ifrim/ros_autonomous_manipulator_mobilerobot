<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- arguments - enable RVIZ -->
  <arg name="rviz"          default="true" /> 	
  <arg name="model"         default="$(find xacro)/xacro --inorder $(find assessmentmobilerobots_2022)/models/robot_design/urdf/robot_design.urdf"/>
  <arg name="rvizconfig"    default="$(find assessmentmobilerobots_2022)/rviz/navigation.rviz" />
  
  <!-- spwan location Gazebo -->
  <arg name="x_pos"         default="0.0"/>
  <arg name="y_pos"         default="0.0"/>
  <arg name="z_pos"         default="0.0"/>

  <!-- load the gazebo world - enable/disable the GUI -->  
  <arg name="gui" default="false"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find assessmentmobilerobots_2022)/worlds/assessment.world"/>
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
 

  <!-- spawn the XACRO robot in Gazebo -->  
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find assessmentmobilerobots_2022)/models/robot_design/urdf/robot_design.urdf" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
  args="-urdf -model robot_design -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description
	-J first_joint_base 0
  	-J second_joint_base -0.5
  	-J third_joint_base 0
  	-J grabber_fixture_left_joint 0
  	-J grabber_fixture_right_joint 0
  	-J left_gripper_joint 0
  	-J right_gripper_joint 0
  	-J right_gripper_joint 0
  	-unpause">
  </node>
  
  <!-- load the joint controllers -->  
  <rosparam command="load" file="$(find assessmentmobilerobots_2022)/models/robot_design/config/joints.yaml" ns="joint_state_controller" />
  <rosparam command="load" file="$(find assessmentmobilerobots_2022)/models/robot_design/config/arm.yaml" ns="arm_controller" />
  <!-- rosparam command="load" file="$(find assessmentmobilerobots_2022)/models/robot_design/config/gazebo_ros_control_params.yaml" /> -->
           
  <!-- spawn the controllers -->

  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="spawn arm_controller" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="false"/>
  </node>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
      <param name="use_sim_time" value="true"/>
  </node>    

  <!-- run RVIZ -->
  <group if="$(arg rviz)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
  </group>


</launch>
