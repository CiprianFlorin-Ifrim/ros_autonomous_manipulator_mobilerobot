<?xml version="1.0" encoding="UTF-8"?>

<launch>	
  <!-- run launch file for the gazebo world and pass the argument of the gui enabled/disabled -->
  <!-- <include file="$(find assessmentmobilerobots_2022)/launch/assessment_world_empty_personalrobot.launch"> -->
  <include file="$(find assessmentmobilerobots_2022)/launch/assessment_world_boxes_personalrobot.launch"> 
        <arg name="gui" value="false"/>
  </include>
  
  
  <!-- arguments -->
  <arg name="rviz"           default="true" /> 
  <arg name="opencv"         default="true" />	
  <arg name="rvizconfig"     default="$(find assessmentmobilerobots_2022)/rviz/navigation.rviz" />
  <arg name="map_file"       default="$(find assessmentmobilerobots_2022)/map/map_2_good/map.yaml"/> 
  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="0.0"/>
  <arg name="cmd_vel_topic"  default="/cmd_vel" />
  <arg name="odom_topic"     default="/odom" />
  <arg name="move_forward_only" default="false"/>


  <!-- load the map to the map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" output="screen"/>


  <!-- initialise the probabilistic localization system AMCL -->  
  <!-- subscribe to /map, /odom, /base_link frame ids -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
	<param name="odom_model_type" value="diff-corrected"/>
	<param name="min_particles"   value="50"/>
	<param name="max_particles"   value="500"/>
	<param name="global_frame_id" value="/map"/>
	<param name="base_frame_id"   value="/base_link"/>
	<param name="odom_frame_id"   value="/odom"/>
	<param name="use_map_topic"   value="true"/>
	<param name="initial_pose_x"  value="$(arg initial_pose_x)"/>
	<param name="initial_pose_y"  value="$(arg initial_pose_y)"/>
	<param name="initial_pose_a"  value="$(arg initial_pose_a)"/>
	<param name="odom_alpha1" value="0.005"/>
	<param name="odom_alpha2" value="0.005"/>
	<param name="odom_alpha3" value="0.010"/>
	<param name="odom_alpha4" value="0.005"/>
	<param name="odom_alpha5" value="0.003"/>
  </node>
  

  <!-- move base node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param name="base_global_planner" value="navfn/NavfnROS"/>
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/move_base_params.yaml" command="load" />
    <rosparam file="$(find assessmentmobilerobots_2022)/parameters/dwa_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
  
  
  <!-- run RVIZ -->
  <group if="$(arg rviz)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
  </group>


  <!-- run computer vision python script for box detection and joint movement -->
  <group if="$(arg opencv)">
    <node name="opencv_boxcheck" pkg="assessmentmobilerobots_2022" type="opencv_boxcheck" /> 
  </group>
  
</launch>


