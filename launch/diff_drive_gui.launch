<launch>
  <arg name="model" default="$(find assessmentmobilerobots_2022)/models/robot_design/urdf/robot_design.urdf"/>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

  <include file="$(find urdf_sim_tutorial)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find assessmentmobilerobots_2022)/models/robot_design/config/joints.yaml"
            ns="joint_state_controller" />
  <rosparam command="load"
            file="$(find assessmentmobilerobots_2022)/models/robot_design/config/diffdrive.yaml"
            ns="diff_drive_controller" />

  <node name="robot_design_spawner" pkg="controller_manager" type="spawner"
    args="joint_state_controller
          diff_drive_controller
          --shutdown-timeout 3"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/diff_drive_controller/cmd_vel"/>
  </node>
</launch>
